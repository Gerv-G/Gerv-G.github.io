---
layout: null
search: exclude
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://www.sitemaps.org/schemas/sitemap/0.9 http://www.sitemaps.org/schemas/sitemap/0.9/sitemap.xsd"
 xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  {% for page in site.pages %}
    {% if page.url contains '.xml' or page.url contains 'feed' or page.url contains 'norobots' or page.url contains 'robots.txt' or page.url contains '.json' %}
      <!-- skip -->
    {% else %}
      <url>
        <loc>{{ site.url }}{{ page.url }}</loc>
        {% if page.last_modified_at or page.date %}
          <lastmod>
            {% if page.last_modified_at %}
              {{ page.last_modified_at | date_to_xmlschema }}
            {% else %}
              {{ page.date | date_to_xmlschema }}
            {% endif %}
          </lastmod>
        {% endif %}
        {% if page.changefreq %}
          <changefreq>{{ page.changefreq }}</changefreq>
        {% endif %}
        {% if page.priority %}
          <priority>{{ page.priority }}</priority>
        {% endif %}
      </url>
    {% endif %}
  {% endfor %}
  {% for post in site.posts %}
    <url>
      <loc>{{ site.url }}{{ post.url }}</loc>
      {% if post.last_modified_at or post.date %}
        <lastmod>
          {% if post.last_modified_at %}
            {{ post.last_modified_at | date_to_xmlschema }}
          {% else %}
            {{ post.date | date_to_xmlschema }}
          {% endif %}
        </lastmod>
      {% endif %}
      {% if post.changefreq %}
        <changefreq>{{ post.changefreq }}</changefreq>
      {% endif %}
      {% if post.priority %}
        <priority>{{ post.priority }}</priority>
      {% endif %}
    </url>
  {% endfor %}
</urlset>
